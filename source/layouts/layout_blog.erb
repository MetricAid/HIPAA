<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1.0">
		<!-- Set title to current page title -->
		<title><%= current_page.data.title || "Catalyze Engineering Blog" %></title>
		<meta name="description" content="Catalyze Engineering Blog">
		<!-- Set keyword content to current post keywords data -->
		<meta name="keywords" content="<%= current_page.data.keywords %>">
		<meta property="og:description" content="<%= current_page.data.summary %>">
		<meta property="og:title" content="Catalyze Engineering Blog" />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://engineering.catalyze.io" />
		<meta property="og:image" content="/assets/img/logo.png" />
		<meta property="og:locale" content="en_US">
		<meta property="twitter:card" content="summary" />
		<meta property="twitter:site" content="@catalyzeio" />
		<meta property="twitter:title" content="<%= current_page.data.seotitle %>" />
		<meta property="twitter:description" content="<%= current_page.data.summary %>" />
		<meta property="twitter:image" content="/assets/img/logo.png" />
		<link rel="icon" type="image/png" href="/favicon.png">
		<link href="//fhir.catalyze.io/favicon-54db3de7.png" rel="icon" type="image/png" />
		<%= partial "partials/ga" %>
		<%= stylesheet_link_tag "//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css", "styles", "syntax" %>
		<%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
	</head>
	<body class="<%= page_classes %>">
		<%= partial "partials/blog-left" %>
		<div class="main-posts">
			<div class="post">
				<header>
					<h1 class="title">
						<%= current_page.data.title %>
					</h1>
					<div class="meta">
						<ul class="tags">
							<li><%= current_page.data.tags %></li>
						</ul>
						<div class="date"><%= current_page.data.date %></div>
					</div>
					<div class="author">
						<div class="prof">
							<img src="/assets/img/profiles/prof-<%= current_page.data.author %>.png">
							<span class="main">
								<%= current_page.data.author_full %>
							</span>
						</div>
						<span class="guest">
							<span id="guest-author"><%= current_page.data.author_alt %></span>
						</span>
					</div>
				</header>
				<%= yield %>
			</div>
		</div>
		<!-- Give me an article to read -->
		<% prev_article = current_article.previous_article %>
		<% if prev_article %>
			<a class="button-more" href="<%= prev_article.url %>" rel="prev" title="Previous article: <%= prev_article.title %>">
				<i class="fa fa-chevron-right"></i> <%= prev_article.title %>
			</a>
		<% end %>
		<% next_article = current_article.next_article %>
		<% if next_article %>
			<a class="button-more" href="<%= next_article.url %>" rel="next" title="Next article: <%= next_article.title %>">
				<i class="fa fa-chevron-right"></i> <%= next_article.title %>
			</a>
		<% end %>
		<%= javascript_include_tag "//fast.fonts.net/jsapi/06d49100-622b-4a4b-9a27-92dce71d35c3.js", "//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js", "main" %>
	</body>
</html>